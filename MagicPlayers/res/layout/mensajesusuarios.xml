<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bgmensajesdos"
        android:orientation="vertical"
        android:padding="33sp" >

        <TextView
            android:id="@+id/tvUsuarioEmisor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/de"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tvUsuarioReceptor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/para"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF" />
        
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:text="@string/asunto"
            android:textColor="#FFFFFF" />
        
          <EditText
              android:id="@+id/etAsunto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="2sp"
              android:background="#AAFFFFFF"
              android:ems="10"
              android:gravity="top"
              android:lines="1"
              android:maxLength="22"
              android:paddingLeft="5sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:text="@string/mensaje"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/etMensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32sp"
            android:layout_marginTop="2sp"
            android:background="#AAFFFFFF"
            android:ems="10"
            android:gravity="top"
            android:lines="9"
            android:maxLength="999"
            android:padding="5sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btnVolverMU"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="volver"
                    android:text="@string/volver"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnEnviarMU"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="enviarMensaje"
                    android:text="@string/enviar"
                    android:textColor="#FFFFFF" />

            </TableRow>
        </TableLayout>

    </LinearLayout>
    

</ScrollView>
