<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="22dp" >

        <TextView
            android:id="@+id/tvATProvincia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROVINCIA"
            android:textSize="22sp" />

        <Spinner
            android:id="@+id/spnProvinciasAT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/provincias" />

        <TextView
            android:id="@+id/tvATCiudad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CIUDAD"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/etATCiudad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/tvATFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FECHA"
            android:textSize="22sp" />

        <DatePicker
            android:id="@+id/dpATFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvATHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HORA"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <EditText
                android:id="@+id/etATHora"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="2" />

            <TextView
                android:id="@+id/tvATDosPuntos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=":" />

            <EditText
                android:id="@+id/etATMinutos"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="2" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvATPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRECIO"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/etATPrecio"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="7" />

            <TextView
                android:id="@+id/tvATEuro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="€" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvATFormato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FORMATO"
            android:textSize="22sp" />

        <Spinner
            android:id="@+id/spnFormatoAT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/formatos" />

        <TextView
            android:id="@+id/tvATDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESCRIPCIÓN"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/etATDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:lines="4"
            android:layout_weight="1.22"
            android:ems="10"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/tvATAforo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AFORO MÁXIMO"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/etATAforo"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="4" />

            <TextView
                android:id="@+id/tvATAforo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personas" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <Button
                android:id="@+id/btnVolverAT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="volverAT"
                android:text="Volver" />

            <Button
                android:id="@+id/btnAltaAT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="altaTorneo"
                android:text="Alta" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>